<nav class="pagination" role="navigation" aria-label="pagination">
  <% if (page.prev){ %>
    <a href="<%- config.root %><%- page.prev_link %>" class="pagination-previous">Previous</a>
  <% } %>
  <% if (page.next){ %>
    <a href="<%- config.root %><%- page.next_link %>" class="pagination-next">Next page</a>
  <% } %>
</nav>